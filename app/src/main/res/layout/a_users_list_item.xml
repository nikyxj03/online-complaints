<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/aul_profile_image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ananymous_person"/>
        <TextView
            android:text="NAME"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/aul_profile_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/aul_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:text="EMAIL"
            android:textSize="16dp"
            android:layout_below="@id/aul_profile_name"
            android:layout_toRightOf="@id/aul_profile_image"
            android:id="@+id/aul_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:text="uid"
            android:textSize="14dp"
            android:layout_below="@id/aul_profile_email"
            android:layout_toRightOf="@id/aul_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aul_profile_uid"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:text="Blocked"
            android:textSize="14dp"
            android:layout_below="@id/aul_profile_uid"
            android:layout_toRightOf="@id/aul_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aul_profile_enable"
            android:layout_marginBottom="2dp"/>

    </RelativeLayout>

</LinearLayout>